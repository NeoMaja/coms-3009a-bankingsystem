<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#12616A"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/trans_ref"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            tools:text="Reference"
            android:textColor="#000000"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/trans_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/trans_ref"
            android:textSize="13dp"
            android:textColor="@color/black"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="7dp"
            android:text="Transaction date" />

        <TextView
            android:id="@+id/Trans_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="75dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="1dp"
            android:layout_toEndOf="@+id/trans_ref"
            android:layout_toRightOf="@+id/trans_ref"
            android:textColor="#000000"
            android:textSize="15sp"
            tools:text="Transaction type" />

        <TextView
            android:id="@+id/trans_amount"
            android:layout_width="105dp"
            android:layout_height="23dp"
            android:layout_below="@+id/Trans_type"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="315dp"
            android:layout_marginLeft="315dp"
            android:layout_marginTop="-19dp"
            android:layout_marginEnd="-16dp"
            android:layout_marginRight="-16dp"
            android:layout_toEndOf="@+id/trans_ref"
            android:layout_toRightOf="@+id/trans_ref"
            android:textColor="#000000"
            android:textSize="15sp"
            tools:text="Amount" />


    </RelativeLayout>


</LinearLayout>