<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Transact">

        <Button android:background="@drawable/round_button"
            android:layout_height="wrap_content"
            android:layout_width="220dp"
            android:text="PAY SOMEONE"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="500dp"
            android:id="@+id/button_PAYSCREEN"
            />

    <Button android:background="@drawable/round_button"
        android:layout_height="wrap_content"
        android:layout_width="220dp"
        android:text="TRANSFER MONEY"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="440dp"
        android:id="@+id/button_TRANSFERSCREEN"
        />

        <Button android:background="@drawable/round_button"
            android:layout_height="wrap_content"
            android:layout_width="220dp"
            android:text="Credit APPLICATION"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="380dp"
            android:id="@+id/button_CREDITSCREEN"
            />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#12616A"
            app:itemBackground="@color/white"
            app:itemTextColor="@color/black"
            android:layout_alignParentBottom="true"
            app:menu="@menu/client_menu"
            />

</RelativeLayout>