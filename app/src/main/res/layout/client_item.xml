<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#12616A"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/account_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            tools:text="Account Type"
            android:textColor="#000000"
            android:textSize="15sp"
 />

        <TextView
            android:id="@+id/account_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/account_type"
            android:layout_toRightOf="@+id/account_type"
            tools:text="Account Number"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/amount"
            android:layout_width="105dp"
            android:layout_height="23dp"
            android:layout_below="@+id/account_number"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="316dp"
            android:layout_marginLeft="316dp"
            android:layout_marginTop="-12dp"
            android:layout_marginEnd="-18dp"
            android:layout_marginRight="-18dp"
            android:layout_toEndOf="@+id/account_type"
            android:layout_toRightOf="@+id/account_type"
            android:textColor="#000000"
            android:textSize="15sp"
            tools:text="Amount" />


    </RelativeLayout>


</LinearLayout>