<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pay">
    tools:layout_editor_absoluteX="0dp"
    android:background="#12616A"
    tools:layout_editor_absoluteY="0dp">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_anchorGravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="237dp"
            tools:layout_editor_absoluteY="144dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Pay"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:gravity="center_horizontal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:text="        Recipient"
                android:textSize="16sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#12616A"
                android:layout_gravity="center">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/recipient"
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:hint="Enter name and surname"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:text="        To which account ?"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:text="        Bank name"
                android:textSize="16sp" />

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RadioButton android:id="@+id/toBankA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bank A"
                    android:textColor="@color/white"
                    android:onClick="onRadioButtonClicked"/>
                <RadioButton android:id="@+id/toBankB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bank B"
                    android:textColor="@color/white"
                    android:onClick="onRadioButtonClicked"/>
                <RadioButton android:id="@+id/toBankC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bank C"
                    android:textColor="@color/white"
                    android:onClick="onRadioButtonClicked"/>
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:text="        Amount"
                android:textSize="16sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#12616A"
                android:layout_gravity="center">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/amount"
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:hint="R 0.00"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:text="        What is the payment for ?"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:text="        Your reference"
                android:textSize="16sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#12616A"
                android:layout_gravity="center">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/reference"
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:hint="Enter your reference"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:text="        Payment date"
                android:textSize="16sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#12616A"
                android:layout_gravity="center">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/paymentDate"
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:hint="Enter payment date"
                    android:inputType="date" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center" />

            <Button
                android:id="@+id/pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn"
                android:text="Pay"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"
                tools:layout_editor_absoluteX="159dp"
                tools:layout_editor_absoluteY="604dp" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>