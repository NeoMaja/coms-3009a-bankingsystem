<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#12616A"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">


        <ImageView
            android:id="@+id/icon_Person1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/client_foreground" />

        <TextView
            android:id="@+id/title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/icon_Person1"
            android:layout_toRightOf="@id/icon_Person1"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/id_subtitle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title1"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/icon_Person1"
            android:layout_toRightOf="@id/icon_Person1"
            android:text="ID"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/email_subtitle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_subtitle1"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/icon_Person1"
            android:layout_toRightOf="@id/icon_Person1"
            android:text="Email"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/no_subtitle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_subtitle1"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/icon_Person1"
            android:layout_toRightOf="@id/icon_Person1"
            android:text="Phone No."
            android:textSize="18sp" />



    </RelativeLayout>

</LinearLayout>